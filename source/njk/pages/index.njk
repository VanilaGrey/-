  <section class="catalog page-main__catalog">
    <h2 class="page-main__caption">Каталог</h2>
    <span class="page-main__title">Каталог кофейных напитков</span>
    <form class="form catalog__slot" action="https://echo.htmlacademy.ru/" method="post">
      <fieldset class="price form__price">
        <legend class="form__title form__title--price">
          Цена
        </legend>
        <div class="range">
          <div class="range__target">
            <div class="range__base">
              <div class="range__connect" style="transform: scaleX(0.91)"></div>
              <div class="range__origin" style="transform: translate(-100%)">
                <button class="range__handle range__handle--lower" type="button">
                  <span class="visually-hidden">Изменить минимальную цену.</span>
                </button>
              </div>
              <div class="range__origin" style="transform: translate(-18.9189%)">
                <button class="range__handle range__handle--upper" type="button">
                  <span class="visually-hidden">Изменить максимальную цену.</span>
                </button>
              </div>
            </div>
            <div class="range__wrapper">
              <label class="range__group">
                <input class="range__field" name="price[]" type="number" max="1000" min="0" step="100" placeholder="0">
                </label>
                <span class="range__dash">-</span>
              <label class="range__group">
                <input class="range__field" name="price[]" type="number" value="900" max="1000" min="0" step="100">
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset class="checkers form__set form__set--checkers">
        <legend class="form__title form__title--milk">
          Наличие молока
        </legend>
        <ul class="checkers__list">
          <li class="checkers__item checkers__item--radio">
            <input class="checkers__input checkers__input--radio" id="checker-no-matter" type="radio" name="milk[]" value="no-matter" checked>
            <label class="checkers__label" for="checker-no-matter">
              Неважно
            </label>
          </li>
          <li class="checkers__item checkers__item--radio">
            <input class="checkers__input checkers__input--radio" id="checker-animal-milk" type="radio" name="milk[]" value="animal-milk">
            <label class="checkers__label" for="checker-animal-milk">
              Только животное
            </label>
          </li>
          <li class="checkers__item checkers__item--radio">
            <input class="checkers__input checkers__input--radio" id="checker-vegetable-milk" type="radio" name="milk[]" value="vegetable-milk">
            <label class="checkers__label" for="checker-vegetable-milk">
              Только растительное
            </label>
          </li>
          <li class="checkers__item checkers__item--radio">
            <input class="checkers__input checkers__input--radio" id="checker-without-milk" type="radio" name="milk[]" value="without-milk" disabled>
            <label class="checkers__label checkers__label--disabled" for="checker-without-milk">
              Без молока
            </label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="checkers form__set form__set--checkers">
        <legend class="form__title form__title--country">
          Страна произрастания
        </legend>
        <ul class="checkers__list">
          <li class="checkers__item checkers__item--checkbox">
            <input class="checkers__input checkers__input--checkbox" id="checker-brazil" type="checkbox" name="country[]" value="brazil" checked>
            <label class="checkers__label" for="checker-brazil">
              Бразилия
            </label>
          </li>
          <li class="checkers__item checkers__item--checkbox">
            <input class="checkers__input checkers__input--checkbox" id="checker-ethiopia" type="checkbox" name="country[]" value="ethiopia">
            <label class="checkers__label" for="checker-ethiopia">
              Эфиопия
            </label>
          </li>
          <li class="checkers__item checkers__item--checkbox">
            <input class="checkers__input checkers__input--checkbox" id="checker-colombia" type="checkbox" name="country[]" value="colombia">
            <label class="checkers__label" for="checker-colombia">
              Колумбия
            </label>
          </li>
          <li class="checkers__item checkers__item--checkbox">
            <input class="checkers__input checkers__input--checkbox" id="checker-costa-rica" type="checkbox" name="country[]" value="costa-rica">
            <label class="checkers__label" for="checker-costa-rica">
              Коста-Рика
            </label>
          </li>
          <li class="checkers__item checkers__item--checkbox">
            <input class="checkers__input checkers__input--checkbox" id="checker-peru" type="checkbox" name="country[]" value="peru" disabled>
            <label class="checkers__label checkers__label--disabled" for="checker-peru">
              Перу
            </label>
          </li>
        </ul>
    </fieldset>
    <button class="button form__button" type="submit">Применить фильтр</button>
    <button class="button form__button form__button--reset" type="reset">Сбросить фильтр</button>
    </form>
